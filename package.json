{
  "name": "bungkus",
  "description": "Bungkus: A lightweight React Hook to save form data (files & text) to IndexedDB. Prevent data loss on refresh.",
  "license": "MIT",
  "keywords": [
    "react",
    "hook",
    "form-persistence",
    "indexeddb",
    "localstorage-alternative",
    "persist-form",
    "file-upload",
    "bungkus", 
    "save-form"
  ],
  "version": "1.3.5",
  "type": "module",
  "main": "./dist/bungkus.umd.js",
  "module": "./dist/bungkus.es.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/bungkus.es.js",
      "require": "./dist/bungkus.umd.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nafhansa/bungkus.git"
  },
  "homepage": "https://github.com/nafhansa/bungkus#readme",
  "bugs": {
    "url": "https://github.com/nafhansa/bungkus/issues"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "idb-keyval": "^6.2.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4",
    "vite-plugin-dts": "^4.5.4"
  }
}
